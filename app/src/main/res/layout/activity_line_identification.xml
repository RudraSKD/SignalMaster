<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LetterIdentificationActivity"
    android:background="@drawable/background_gradient">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- App Header (Title & Logo) -->
        <LinearLayout
            android:id="@+id/app"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@android:color/holo_blue_light"
            android:elevation="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <!-- Small Logo Image -->
            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/semaphore_logo"
                android:contentDescription="App Logo"
                android:layout_marginEnd="10dp"/>

            <!-- App Name / Title -->
            <TextView
                android:id="@+id/appTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SignalMaster"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Heading -->
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Decode the Line"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="80dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingTop="16dp"/>

                <!-- Score Display -->
                <LinearLayout
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <!-- Score Display -->
                    <TextView
                        android:id="@+id/currentScoreText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Score: 0"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        app:layout_constraintTop_toBottomOf="@id/title"
                        app:layout_constraintStart_toStartOf="parent"
                        android:padding="16dp"/>

                    <TextView
                        android:id="@+id/highScoreText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="High Score: 0"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        app:layout_constraintTop_toBottomOf="@id/title"
                        app:layout_constraintStart_toStartOf="parent"
                        android:padding="16dp"/>
                </LinearLayout>

                <!-- Play/Pause Button -->
                <LinearLayout
                    android:id="@+id/play_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="2dp"
                    app:layout_constraintTop_toBottomOf="@id/score"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <!-- Play/Pause Button -->
                    <Button
                        android:id="@+id/playPauseButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Play"
                        android:padding="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time(sec):"
                        android:textColor="#000"
                        android:layout_marginLeft="20dp"/>
                    <Spinner
                        android:id="@+id/delayInput"
                        android:padding="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown" />
                </LinearLayout>

                <!-- Semaphore Letter Image -->
                <LinearLayout
                    android:id="@+id/semaphoreImageAndReplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="11dp"
                    app:layout_constraintTop_toBottomOf="@id/playPauseButton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginLeft="25dp">

                <!-- Semaphore Letter Image -->
                    <ImageView
                        android:id="@+id/semaphoreImage"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:scaleType="fitCenter"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/semaphoreCard"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="30dp"
                        app:cardCornerRadius="25dp"
                        android:background="@android:color/transparent"
                        android:layout_marginBottom="-20dp">

                    <ImageView
                        android:id="@+id/replayButton"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/reload_icon"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/> <!-- Use a circular reload icon -->

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <HorizontalScrollView
                    android:id="@+id/scrollLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:scrollbars="none"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal">
                <EditText
                    android:id="@+id/lineInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter the line"
                    android:textColorHint="@android:color/white"
                    android:textSize="18sp"
                    android:singleLine="true"
                    android:padding="10dp"
                    android:gravity="center"
                    android:background="@android:color/transparent"
                    app:layout_constraintTop_toBottomOf="@id/semaphoreImageAndReplay"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                    </LinearLayout>
                </HorizontalScrollView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-25dp">
            <LinearLayout
                android:id="@+id/keyboardWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent">

                <!-- QWERTY Keyboard Layout -->
                <GridLayout
                    android:id="@+id/keyboardLayout_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="10"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="2dp"
                    android:layout_gravity="center"
                    android:background="@android:color/darker_gray"
                    android:layout_marginTop="10dp"
                    android:clickable="false"
                    android:focusable="false">

                    <!-- QWERTY Keys -->
                    <TextView
                        android:id="@+id/key_q"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Q"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:id="@+id/key_w"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="W"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:id="@+id/key_e"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="E"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:id="@+id/key_r"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="R"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:id="@+id/key_t"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="T"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:id="@+id/key_y"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Y"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:id="@+id/key_u"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="U"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:id="@+id/key_i"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="I"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:id="@+id/key_o"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="O"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:id="@+id/key_p"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="P"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:layout_margin="1dp"/>

                    <!-- Add remaining keys (E, R, T, Y, U, I, O, P) following the same structure -->

                </GridLayout>

                <GridLayout
                    android:id="@+id/keyboardLayout_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="9"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_gravity="center"
                    android:background="@android:color/darker_gray"
                    android:clickable="false"
                    android:focusable="false">

                    <TextView
                        android:id="@+id/key_a"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="A"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:id="@+id/key_s"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="S"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:id="@+id/key_d"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="D"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:id="@+id/key_f"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="F"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:id="@+id/key_g"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="G"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:id="@+id/key_h"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="H"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:id="@+id/key_j"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="J"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:id="@+id/key_k"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="K"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:id="@+id/key_l"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="L"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:layout_margin="1dp"/>

                </GridLayout>

                <GridLayout
                    android:id="@+id/keyboardLayout_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="8"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="4dp"
                    android:layout_gravity="center"
                    android:background="@android:color/darker_gray"
                    android:clickable="false"
                    android:focusable="false">

                    <TextView
                        android:id="@+id/key_z"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Z"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:id="@+id/key_x"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="X"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:id="@+id/key_c"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="C"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:id="@+id/key_v"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="V"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:id="@+id/key_b"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="B"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:id="@+id/key_n"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="N"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:id="@+id/key_m"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="M"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:layout_margin="1dp"/>

                    <TextView
                        android:id="@+id/key_backspace"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="â†"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:layout_margin="1dp"/>

                </GridLayout>

                <GridLayout
                    android:id="@+id/keyboardLayout_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="1"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_gravity="center"
                    android:background="@android:color/darker_gray"
                    android:clickable="false"
                    android:focusable="false">

                    <TextView
                        android:id="@+id/key_space"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_columnWeight="1"
                        android:text=" "
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp"
                        android:layout_margin="1dp"/>

                </GridLayout>
            </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
